---
import AuthHeader from '#components/AuthHeader.svelte';
import Header from '#components/Header.svelte';

interface Props {
	title: string;
}

const light = Astro.cookies.get("light")?.value === "true";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<AuthHeader client:load light={light}></AuthHeader>
		<main class="h-screen flex items-center justify-center py-[80px]">
			<slot />
		</main>
	</body>
</html>
